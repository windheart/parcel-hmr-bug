{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "isolatedModules": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./packages",
    "paths": {
      "@test/*": ["*/src"]
    }
  }
}
